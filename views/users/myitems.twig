{% extends 'layout.twig' %}

{% block body %}
  <h1>{{user.username}}'s items</h1>

  <div class="row">
    <div class="col-sm-6">
      <a href="/users/newitem" class="profile-tab">
        <i class="fa fa-plus-circle fa-5x" aria-hidden="true" style="width:100%"></i>
        <h3>New item</h3>
      </a>
    </div>
  </div>

  <div class="row list-items">
    <div class="col-sm-4">
      <b>Name</b>
    </div>
    <div class="col-sm-2">
      <b>Type</b>
    </div>
    <div class="col-sm-2">
      <b>Votes</b>
    </div>
  </div>
    {% if items is defined %}
        {% for item in items %}
          <div class="row list-items">
            <div class="col-sm-4">
                {{ item.name|e }}
            </div>
            <div class="col-sm-2">
                {{ item.type|e }}
            </div>
            <div class="col-sm-2">
                {{ item.votes|e }}
            </div>
            <div class="col-sm-4">
              <a class="btn btn-primary" href="/users/items/{{ item._id }}/edit">Edit</a>
              <a class="btn btn-danger" href="/users/items/{{ item._id }}/delete">Delete</a>
            </div>
          </div>
        {% endfor %}
    {% endif %}

{% endblock %}
