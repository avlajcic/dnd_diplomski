{% extends 'layout.twig' %}

{% block body %}
    <h1>{{ title }}</h1>
    <p>Welcome {% if user is defined %} {{ user.username }} {% endif %}to {{ title }}</p>

    <hr>
    <div class="row">
        <div class="col">
            <h4>Latest items</h4>
            {% for item in latestItems %}
                <div class="row">
                    <div class="col">
                        {% if item.type == 'weapon' %}
                            <img class="item-icon" src="/images/weapons_icon.png">
                        {% elseif item.type == 'armor'%}
                            <img class="item-icon" src="/images/armor_icon.png">
                        {% else %}
                            <img class="item-icon" src="/images/misc_icon.png">
                        {% endif %}
                        <a href="/items/{{ item._id }}"> {{ item.name }} </a>
                    </div>
                    <div class="col">
                        {{ item.votes }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col">
            <h4>Hottest items today</h4>
            {% for item in hottestToday %}
                <div class="row">
                    <div class="col">
                        {% if item.type == 'weapon' %}
                            <img class="item-icon" src="/images/weapons_icon.png">
                        {% elseif item.type == 'armor'%}
                            <img class="item-icon" src="/images/armor_icon.png">
                        {% else %}
                            <img class="item-icon" src="/images/misc_icon.png">
                        {% endif %}
                        <a href="/items/{{ item._id }}"> {{ item.name }} </a>
                    </div>
                    <div class="col">
                        {{ item.votes }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col">
            <h4>Most voted items</h4>
            {% for item in mostVoted %}
                <div class="row">
                    <div class="col">
                        {% if item.type == 'weapon' %}
                            <img class="item-icon" src="/images/weapons_icon.png">
                        {% elseif item.type == 'armor'%}
                            <img class="item-icon" src="/images/armor_icon.png">
                        {% else %}
                            <img class="item-icon" src="/images/misc_icon.png">
                        {% endif %}
                        <a href="/items/{{ item._id }}"> {{ item.name }} </a>
                    </div>
                    <div class="col">
                        {{ item.votes }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
