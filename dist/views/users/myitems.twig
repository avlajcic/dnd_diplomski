{% extends 'layout.twig' %}

{% block body %}
  <h1>{{user.username}}'s items</h1>

  <div class="row">
    <div class="col-sm-6">
      <a href="/users/newitem" class="profile-tab">
        <i class="fa fa-plus-circle fa-5x" aria-hidden="true" style="width:100%"></i>
        <h3>New item</h3>
      </a>
    </div>
  </div>
    {% if items is defined %}
      <ul>
          {% for item in items %}
            <li>{{ item.name|e }}</li>
          {% endfor %}
      </ul>
    {% endif %}

{% endblock %}
